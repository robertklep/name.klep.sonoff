  "flow": {
    "triggers": [
      {
        "id": "switch-1-on",
        "title": {
          "en": "Switch 1 turned on",
          "nl": "Schakelaar 1 aangezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=sonoff-tasmota-dual"
          }
        ]
      },
      {
        "id": "switch-2-on",
        "title": {
          "en": "Switch 2 turned on",
          "nl": "Schakelaar 2 aangezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=sonoff-tasmota-dual"
          }
        ]
      },
      {
        "id": "switch-1-off",
        "title": {
          "en": "Switch 1 turned off",
          "nl": "Schakelaar 1 uitgezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=sonoff-tasmota-dual"
          }
        ]
      },
      {
        "id": "switch-2-off",
        "title": {
          "en": "Switch 2 turned off",
          "nl": "Schakelaar 2 uitgezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=sonoff-tasmota-dual"
          }
        ]
      },
      {
        "id": "bridge-rf-receive",
        "title": {
          "en": "RF code received",
          "nl": "RF code ontvangen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=sonoff-tasmota-rf-bridge"
          }
        ],
        "tokens": [
          {
            "name": "code",
            "type": "string",
            "title": {
              "en": "Code"
            },
            "example": "ABC123"
          },
          {
            "name": "sync",
            "type": "number",
            "title": {
              "en": "Sync"
            },
            "example": 8470
          },
          {
            "name": "low",
            "type": "number",
            "title": {
              "en": "Low"
            },
            "example": 270
          },
          {
            "name": "high",
            "type": "number",
            "title": {
              "en": "High"
            },
            "example": 840
          },
          {
            "name": "key",
            "type": "number",
            "title": {
              "en": "Key"
            },
            "example": 4
          },
          {
            "name": "timestamp",
            "type": "number",
            "title": {
              "en": "Timestamp"
            },
            "example": 143938800000
          }
        ]
      },
      {
        "id": "th-temperature-changed",
        "title": {
          "en": "Temperature changed",
          "nl": "Temperatuur veranderd"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=sonoff-tasmota-th"
          }
        ],
        "tokens": [
          {
            "name": "temperature",
            "type": "number",
            "title": {
              "en": "Temperature",
              "nl": "Temperatuur"
            },
            "example": {
              "en": "18.3",
              "nl": "18.3"
            }
          },
          {
            "name": "previous",
            "type": "number",
            "title": {
              "en": "Previous value",
              "nl": "Vorige waarde"
            },
            "example": {
              "en": "17.3",
              "nl": "17.3"
            }
          }
        ]
      },
      {
        "id": "th-humidity-changed",
        "title": {
          "en": "Humidity changed",
          "nl": "Luchtvochtigheid veranderd"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=sonoff-tasmota-th"
          }
        ],
        "tokens": [
          {
            "name": "humidity",
            "type": "number",
            "title": {
              "en": "Humidity",
              "nl": "Luchtvochtigheid"
            },
            "example": {
              "en": "52",
              "nl": "52"
            }
          },
          {
            "name": "previous",
            "type": "number",
            "title": {
              "en": "Previous value",
              "nl": "Vorige waarde"
            },
            "example": {
              "en": "53",
              "nl": "53"
            }
          }
        ]
      },
      {
        "id": "rf_receive",
        "title": {
          "en": "RF code received",
          "nl": "RF code ontvangen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=sonoff-tasmota&capabilities=rf_receive"
          }
        ],
        "tokens": [
          {
            "name": "code",
            "type": "string",
            "title": {
              "en": "Code"
            },
            "example": "ABC123"
          },
          {
            "name": "sync",
            "type": "number",
            "title": {
              "en": "Sync"
            },
            "example": 8470
          },
          {
            "name": "low",
            "type": "number",
            "title": {
              "en": "Low"
            },
            "example": 270
          },
          {
            "name": "high",
            "type": "number",
            "title": {
              "en": "High"
            },
            "example": 840
          },
          {
            "name": "key",
            "type": "number",
            "title": {
              "en": "Key"
            },
            "example": 4
          },
          {
            "name": "timestamp",
            "type": "number",
            "title": {
              "en": "Timestamp"
            },
            "example": 143938800000
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "switch-1-on",
